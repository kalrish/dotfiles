# man:git-config(1)


[commit]

	gpgSign = true


[core]

	editor = vim

	pager = less --no-init --quit-if-one-screen


[credential]

	helper = libsecret


[pager]

	diff = diff-highlight | less --no-init --quit-if-one-screen

	log = diff-highlight | less --no-init --quit-if-one-screen

	show = diff-highlight | less --no-init --quit-if-one-screen
